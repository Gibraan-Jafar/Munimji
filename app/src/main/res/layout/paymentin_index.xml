<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Mode"
            android:id="@+id/textView9"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHEQUE"
            android:id="@+id/bt_cheque_pin"
            android:layout_alignTop="@+id/textView9"
            android:layout_toRightOf="@+id/textView8"


            android:layout_toEndOf="@+id/textView8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CASH"
            android:id="@+id/btcash_pin"
            android:layout_alignBottom="@+id/bt_cheque_pin"
            android:layout_toRightOf="@+id/bt_cheque_pin"


            android:layout_toEndOf="@+id/bt_cheque_pin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONLINE"
            android:id="@+id/btonline_pin"
            android:layout_alignTop="@+id/btcash_pin"
            android:layout_toRightOf="@+id/btcash_pin"

            android:layout_toEndOf="@+id/btcash_pin" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/test"
            android:layout_below="@+id/bt_cheque_pin"
            android:layout_marginTop="10dp"
            android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ly_cheque_pin"

            android:layout_marginTop="10dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheque No"
                android:id="@+id/textView10"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/etcheckno_pin"
                android:inputType="phone"
                android:layout_toRightOf="@+id/textView10"
                android:layout_toEndOf="@+id/textView10" />

            <TextView
                android:id="@+id/tv35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATED"
                android:layout_toRightOf="@+id/etcheckno_pin"
                android:layout_toEndOf="@+id/etcheckno_pin"
                />
            <EditText
                android:id="@+id/et_check_date_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="check date"
                android:layout_toRightOf="@id/tv35"
                android:layout_toEndOf="@+id/tv35"/>
            <Button
                android:id="@+id/bt_check_date_pin"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/et_check_date_pin"
                android:layout_toEndOf="@+id/et_check_date_pin"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank"
                android:id="@+id/textView11"
                android:layout_below="@+id/etcheckno_pin"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true" />


            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/etbranch_pin"
                android:layout_below="@+id/etcheckno_pin"
                android:layout_alignLeft="@+id/etcheckno_pin"
                android:layout_alignStart="@+id/etcheckno_pin"
                android:layout_alignRight="@+id/etcheckno_pin"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ly_online_pin"
            android:visibility="visible"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trans id:"
                android:id="@+id/textView12"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_transid_pin"
                android:inputType="phone"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView12"
                android:layout_toEndOf="@+id/textView12" />
            <TextView
                android:id="@+id/tv36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATED"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="40dp"
                />
            <EditText
                android:id="@+id/et_online_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="cheque date"
                android:layout_toRightOf="@id/tv36"
                android:layout_toEndOf="@+id/tv36"
                android:layout_marginTop="40dp"/>
            <Button
                android:id="@+id/bt_online_date"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/et_online_date"
                android:layout_toEndOf="@+id/et_online_date"
                android:layout_marginTop="40dp"/>

        </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:id="@+id/textView8"
            android:layout_below="@+id/test"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etamount_pin"
            android:layout_below="@+id/test"
            android:layout_alignLeft="@+id/etmid_pin"
            android:layout_alignStart="@+id/etmid_pin"
            android:layout_alignRight="@+id/etmid_pin"
            android:layout_marginTop="20dp"
            android:layout_alignEnd="@+id/etmid_pin"
            android:inputType="phone"        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Payment type"
            android:id="@+id/textView30"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="20dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_payin"
            android:layout_toRightOf="@+id/bt_cheque_pin"
            android:layout_toEndOf="@+id/bt_cheque_pin"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="20dp"
            android:spinnerMode="dropdown" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flatno"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />

    <AutoCompleteTextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/etmid_pin"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/textView70"
            android:layout_below="@+id/textView7"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/tv_personName"
            android:layout_below="@+id/textView7"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/textView70"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="130dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etdatepicker_pin"
        android:text="pick a date"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/textView13"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/btdate"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/etdatepicker_pin"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="5dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btsubmit_pin"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView30"
        android:layout_marginLeft="40dp"
        />
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
