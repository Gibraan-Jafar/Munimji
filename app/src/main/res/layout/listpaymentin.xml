<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Year:"
        android:textColor="#000"
        android:layout_below="@+id/spinner_listpayin"
        android:layout_toLeftOf="@+id/textView22"
        android:layout_toStartOf="@+id/textView22"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/btsubmit_listpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#eeffaa"
        android:text="submit"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView31"
        android:layout_centerHorizontal="true" />

    <HorizontalScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/hsv_listpin"
        android:layout_below="@+id/btsubmit_listpin"

        >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/sv_listpin"

            android:layout_alignParentBottom="true">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/btsubmit_listpin"
                android:id="@+id/tl_listpin">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/hsv_listpin"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flatno"
                        android:padding="5dp"
                        android:textSize="28sp"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:id="@+id/Flatno_listpin"
                        android:layout_column="0"


                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T.AMT"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:id="@+id/tamount_listpin"
                        android:layout_column="1"
                        android:padding="5dp"
                        android:textSize="28sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APRIL"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:id="@+id/tvapril_listpin"
                        android:layout_column="2"
                        android:padding="5dp"
                        android:textSize="28sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAY"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:textSize="28sp"
                        android:id="@+id/tvmay_listpin"
                        android:layout_column="3" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JUNE"
                        android:padding="5dp"
                        android:textSize="28sp"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:id="@+id/tvJUNE_listpin"
                        android:layout_column="4" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JULY"
                        android:padding="5dp"
                        android:textSize="28sp"
                        android:background="@drawable/shape"
                        android:textAlignment="center"

                        android:id="@+id/tvjuly_listpin"
                        android:layout_column="5" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AUGUST"
                        android:padding="5dp"
                        android:textSize="28sp"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:id="@+id/tvaugust_listpin"
                        android:layout_column="6" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SEPT"
                        android:padding="5dp"                        android:textSize="28sp"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:id="@+id/tvsept_listpin"
                        android:layout_column="7" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OCT"
                        android:padding="5dp"
                        android:textSize="28sp"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:id="@+id/tvoct_listpin"
                        android:layout_column="8" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOV"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:textSize="28sp"
                        android:id="@+id/tvnovember_listpin"
                        android:layout_column="9" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEC"
                        android:padding="5dp"
                        android:textSize="28sp"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:id="@+id/tvdec_listpin"
                        android:layout_column="10" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JAN"
                        android:padding="5dp"
                        android:textSize="28sp"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:id="@+id/tvjan_listpin"
                        android:layout_column="11" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FEB"
                        android:padding="5dp"
                        android:textSize="28sp"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:id="@+id/tvfeb_listpin"
                        android:layout_column="12" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MARCH"
                        android:padding="5dp"
                        android:textSize="28sp"
                        android:background="@drawable/shape"
                        android:textAlignment="center"
                        android:id="@+id/tvmarch_listpin"
                        android:layout_column="13"

                        />


                </TableRow>


            </TableLayout>


        </ScrollView>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CASH"
        android:background="#ff0000"
        android:id="@+id/textView21"
        android:textColor="#ffff00"
        android:layout_above="@+id/hsv_listpin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ONLINE"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:id="@+id/textView22"
        android:layout_alignTop="@+id/textView21"
        android:layout_toRightOf="@+id/textView21"
        android:layout_toEndOf="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheque"
        android:background="#ff0000"
        android:id="@+id/textView23"
        android:textColor="#0000ff"
        android:layout_alignTop="@+id/textView22"
        android:layout_toRightOf="@+id/textView22"
        android:layout_toEndOf="@+id/textView22" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment for"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_listpayin"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/textView31"
        android:layout_toRightOf="@+id/textView23"
        android:layout_toEndOf="@+id/textView23" />

    <Button
        android:id="@+id/btexp_listpayin"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hsv_listpin"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/btsubmit_listpin"
        android:layout_toRightOf="@+id/btsubmit_listpin"
        android:background="#eeffaa"
        android:text="export" />

    <Spinner
        android:id="@+id/spinner_from_lispin"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView31"
        android:layout_toEndOf="@+id/textView31" />

    <Spinner
        android:id="@+id/spinner_to_listpin"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/spinner_from_lispin"
        android:layout_alignLeft="@+id/btexp_listpayin"
        android:layout_alignStart="@+id/btexp_listpayin" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:"
        android:layout_alignTop="@+id/spinner_from_lispin"
        android:layout_toLeftOf="@+id/textView23"
        android:layout_toStartOf="@+id/textView23" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:layout_alignTop="@+id/spinner_to_listpin"
        android:layout_toLeftOf="@+id/btexp_listpayin"
        android:layout_toStartOf="@+id/btexp_listpayin" />


</RelativeLayout>