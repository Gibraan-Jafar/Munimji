<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lltemp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flatno"
                android:id="@+id/tvFlatno"
                android:layout_marginTop="20dp"
                android:layout_alignRight="@+id/tvmobile12_pown"
                android:layout_alignEnd="@+id/tvmobile12_pown" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_flatno"
                android:hint="flatno"
                android:ems="7"

                android:layout_toRightOf="@id/tvFlatno"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/tvName"
                android:layout_weight="0.05"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ems="5"
                android:layout_alignBaseline="@+id/etname"
                android:layout_alignBottom="@+id/etname"
                android:layout_alignLeft="@+id/tvFlatno"
                android:layout_alignStart="@+id/tvFlatno" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etname"
                android:ems="7"
                android:hint="name"
               android:layout_toRightOf="@id/tvFlatno"
                android:layout_below="@+id/tvFlatno"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile no."
                android:id="@+id/tvmobile12_pown"
                android:layout_below="@+id/etname"
                android:layout_marginTop="10dp"
                 />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="7"
                android:id="@+id/etmobile_own"
                android:hint="mobile no"
                android:layout_below="@+id/etname"
                android:layout_alignLeft="@+id/etname"
                android:layout_alignStart="@+id/etname" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email id"
                android:id="@+id/textView32"
                android:layout_below="@+id/etmobile_own"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/et_email_own"
                android:hint="Email address"
                android:layout_below="@+id/etmobile_own"
                android:layout_alignLeft="@+id/etmobile_own"
                android:layout_alignStart="@+id/etmobile_own" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Wheelers"
                android:id="@+id/textView33"
                android:layout_marginTop="12dp"
                android:layout_alignTop="@+id/ly_add_numvech2"
                android:layout_alignLeft="@+id/tvName"
                android:layout_alignStart="@+id/tvName" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ly_add_numvech2"
                android:orientation="vertical"
                android:layout_below="@+id/et_email_own"
                android:layout_toRightOf="@id/textView33"
                android:layout_marginLeft="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/hly_addvech2">

                    <EditText
                        android:id="@+id/et_2Wheeler"
                        android:layout_width="179dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/et_email_own"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/textView33"
                        android:ems="10"
                        android:inputType="textMultiLine" />

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/bt_addvech2_newown"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/et_2Wheeler"
                        android:layout_below="@+id/et_email_own"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/add"/>
                    </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Wheelers"
                android:id="@+id/textView34"
                android:layout_marginTop="12dp"
                android:layout_alignTop="@+id/ly_add_numvech"
                android:layout_toLeftOf="@+id/ly_add_numvech2"
                android:layout_toStartOf="@+id/ly_add_numvech2" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ly_add_numvech"
                android:orientation="vertical"
                android:layout_below="@+id/ly_add_numvech2"
                android:layout_toRightOf="@id/textView34"
                android:layout_marginLeft="10dp"
                >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/hly_addvech">

                        <EditText
                            android:layout_width="178dp"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:ems="10"
                            android:id="@+id/et_4Wheeler"
                            android:layout_marginLeft="10dp"/>
                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/bt_addvech_newown"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/et_4Wheeler"
                            android:layout_below="@+id/ly_add_numvech2"
                            android:focusableInTouchMode="true"
                            android:background="@drawable/add"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linera123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/ly_add_numvech"
                    >
                    <CheckBox
                        android:id="@+id/cbOccupancy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Self Occupied"
                        android:layout_below="@+id/etmobile_own"
                        android:checked="true"
                        android:layout_centerHorizontal="true" />

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="save"
                    android:id="@+id/bt_insert"
                    android:layout_below="@+id/linera123"
                    android:layout_marginLeft="50dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info"
                    android:id="@+id/btinfo"
                    android:layout_below="@+id/linera123"
                    android:layout_toRightOf="@+id/bt_insert"
                    android:layout_marginLeft="20dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="export"
                    android:id="@+id/bt_exp_own"
                    android:layout_below="@+id/linera123"
                    android:layout_toRightOf="@+id/btinfo"
                    android:layout_toEndOf="@+id/btinfo"
                    android:layout_marginLeft="20dp"/>
        </RelativeLayout>
    </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" OWN "
            android:background="#e5fff6"
            android:id="@+id/textView5"
            android:textStyle="bold"
            android:layout_below="@+id/scrollView1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TENENT"
            android:textStyle="bold"
            android:background="#7ccd7c"
            android:id="@+id/textView6"
            android:layout_below="@+id/scrollView1"
            android:layout_toRightOf="@+id/textView5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="10dp"
            >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            >
    <TableLayout
        android:id="@+id/index_own"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView6"
        android:stretchColumns="1,2"
        android:shrinkColumns="0"
        >

        <TableRow android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <TextView
                android:background="@drawable/shape"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Flat No"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="17sp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/shape"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tvName_own"
                android:text="Name      "
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="17sp"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/shape"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tvmobile_own"
                android:text="Mobile      "
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="17sp"
                android:gravity="center"
                />
        </TableRow>
    </TableLayout>
        </ScrollView>
        </LinearLayout>
</RelativeLayout>